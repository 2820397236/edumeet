html {
	height: 100%;
	font-family: 'Roboto';
	font-weight: 300;
	overflow-x: hidden;
	overflow-y: hidden;

	+mobile() {
		font-size: 12px;
	}
}

body {
	height: 100%;
	overflow-x: hidden;
	overflow-y: hidden;
	background-color: #333;

	+desktop() {
		font-size: 16px;
		background-image: url('/resources/images/background.svg');
		background-attachment: fixed;
		background-position: center;
		background-size: cover;
		background-repeat: no-repeat;
	}
}

